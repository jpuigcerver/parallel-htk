[ $# -ne 3 ] && echo "
Usage: ${0##*/} <proto> <vfloors> <hmm_symbs>

Description:
  Initialize a set of HMMs from a proto and vFloors file.

Arguments:
  proto     : File containing the proto file generated by HCompV.
  vfloors   : File containing the variances computed by HCompV.
  hmm_symbs : File containing the list of HMM symbols.
" >&2 && exit 1;

proto="$1";
vfloors="$2";
symb_lst="$3";

head -n 3 "${proto}" || exit 1;
cat "${vfloors}" || exit 1;
for i in $(< "${symb_lst}"); do
    tail -n +4 "${proto}" | \
	awk -v S="$i" '{
          if ($1 == "~h" && $2 == "\"proto\"")
            print "~h \""S"\"";
          else
            print $0;
          }' || exit 1;
done;
exit 0;
